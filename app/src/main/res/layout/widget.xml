<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_layout"
    android:padding="0dp">



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_layout"
        android:padding="0dp">
        <!--#c4ffa800-->
        <TextView
            android:id="@+id/txtUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updated"
            android:paddingLeft="30px"
            android:paddingStart="30px"
            android:layout_marginBottom="5px"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0"
            android:textColor="@color/green_text"
            android:textSize="14dp"
            android:textAppearance="?android:attr/textAppearanceLarge">
        </TextView>

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5px"
            android:layout_weight="100"
            android:textColor="@color/green_text"
            android:textSize="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge">
        </TextView>

        <ProgressBar
            android:id="@+id/updateProgressBar"
            android:layout_width="wrap_content"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:paddingRight="20px"
            android:paddingEnd="20px"
            android:paddingLeft="20px"
            android:paddingStart="20px"
            android:layout_height="wrap_content"
            style="@style/GenericProgressIndicator"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wuzup"
            android:fontFamily=""
            android:id="@+id/BtnUpdate"
            android:padding="8dp"
            android:background="@drawable/updbtn"
            android:layout_weight="0"
            android:stateListAnimator="@null"
            android:visibility="gone"
            android:textColor="#ffffff"
            >
        </Button>

    </LinearLayout>

    <ListView
        android:id="@+id/lvList"
        android:paddingLeft="20px"
        android:paddingStart="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_below="@id/headerLayout">
    </ListView>

    <RelativeLayout
        android:id="@+id/widgetFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_layout">

        <ImageButton
            android:src="@drawable/notification_bell3"
            android:id="@+id/goToSettingsBtn"
            android:background="?android:selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_width="18dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="18dp" />
    </RelativeLayout>




</RelativeLayout>